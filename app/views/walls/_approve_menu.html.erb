<div class="controls <%= item.status %>">
  <% if item.status != 'approved' %>
    <%= link_to approve_item_path(item), remote: true do -%><i class="fa fa-check"></i>Approve<% end %>
  <% else %>
    <i class="fa fa-check"></i>Approve
  <% end %>
  |
  <% if item.status != 'banned' %>
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Block <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to ban_item_path(item), remote: true do -%>
        <i class="fa fa-times"></i>Block photo
      <% end %></li>
      <li><%= link_to ban_user_wall_path(item.wall_id, item.id), remote: true do -%>
        <i class="fa fa-times"></i>Block user
      <% end %></li>
    </ul>
  </div>
    
  <% else %>
    <i class="fa fa-times"></i>Block
  <% end %>
</div>