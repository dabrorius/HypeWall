<div class="controls <%= item.status %>">
  <% if item.status != 'approved' %>
    <%= link_to approve_item_path(item), remote: true do -%><i class="fa fa-check"></i>Approve<% end %>
  <% else %>
    <i class="fa fa-check"></i>Approve
  <% end %>
  |
  <% if item.status != 'banned' %>
    <%= link_to ban_item_path(item), remote: true do -%>
      <i class="fa fa-times"></i>Block
    <% end %>
  <% else %>
    <i class="fa fa-times"></i>Block
  <% end %>
</div>