<!DOCTYPE html>
<html class="">
<head>
  <%= javascript_include_tag 'application' %>

  <style>
    html, body {
      overflow: hidden;
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
    }

    canvas {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      touch-action: none;
    }


  </style>

  <%= stylesheet_link_tag 'application_fullscreen' %>
</head>
<body style="background-image: url('<%= @wall.background_image.url %>'); background-color: <%= @wall.background_color %>" class="<%= @wall.background_style %>">

  <%= yield %>

  <%= render partial: 'layouts/google_analytics' %>
</body>
</html>
